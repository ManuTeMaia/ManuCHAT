{
    "extends": "stylelint-config-standard",
    "rules": {
        "custom-property-pattern": null,
        "selector-class-pattern": null,
        "string-quotes": null,
        "color-hex-case": "lower",
        "indentation": 4,
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": ["/^grid-/"]
            }
        ]
    },

    "ignoreFiles": [
        "dist/*",
        "*.json",
        "*.html",
        "*.toml",
        "*.ts",
        "*.js"
    ]
}