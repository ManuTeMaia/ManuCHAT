.chat--list-profile-card-wrap {
    padding: calc(0.5 * var(--global--spacing-unit));
    background: var(--global--color-primary-20);
}

.chat--list-profile-card-actions {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.profile-card-avatar,
.profile-card-avatar img {
    width: 60px;
    height: 60px;
}

.card-actions-icons {
    padding-right: 12px;
}
.chat-list-profile-card.profile-card-action {
    font-size: var(--global--font-size-xl);
    padding-left: 24px;
    text-shadow: rgba(0, 0, 0, 0.15) 0 4px 4px;
}

